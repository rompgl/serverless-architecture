rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAllowed(uid) {
      return uid == "l7JoCc5VAeTTXWlDgOMl" 
      || uid == "FwsnAHEZnMf7AEibbJha"
      || uid == "6k2lusUTDxNVpzmJKmHSmqHspN72";
    }
    
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow update, delete: if request.auth != null && isAllowed(request.auth.uid);
    }
  }
}